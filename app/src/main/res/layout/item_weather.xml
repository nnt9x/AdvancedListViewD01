<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgItemWeather"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvItemCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgItemWeather"
        app:layout_constraintTop_toTopOf="@id/imgItemWeather"
        app:layout_constraintBottom_toBottomOf="@id/imgItemWeather"
        android:text="City"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/tvItemWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvItemCity"
        app:layout_constraintLeft_toRightOf="@id/imgItemWeather"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Snow"/>

    <TextView
        android:id="@+id/tvItemTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="40sp"
        android:text="0 *C"/>


</androidx.constraintlayout.widget.ConstraintLayout>